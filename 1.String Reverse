StringToCharArray
public class Main
{
  public static void main (String[]args)
  {
    String str= " BufferBuffer ";
    char[] stringToChar= str.trim().toCharArray();
    for(char ch:stringToChar){
        System.out.print(ch+" ,");
    }
  }
}
